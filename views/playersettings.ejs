<%- include('./includes/dash.ejs') %>
<link rel="stylesheet" href="/assets/css/playersettings.css">
<section class="home">
    <div class="text">Player Settings</div>
    <div class="dash_container">
        <div class="interactionCard">
            <div class="interactionCardTitle"> Selected Class </div>
            <div class="interactionCardContent">
                <form action="/api/changeclass" method="POST">
                    <input type="hidden" value="<%- User['_id'] %>" name="userid">
                    <select name="class" id="class_select" class="box">
                        <option value="none" selected disabled hidden><%- User['class'] %></option>
                        <% Classes.forEach(function(data) {%>
                            <option value="<%- data['classname'] %>"><%- data['classname'] %></option>
                        <%})%>
                    </select>
                    <button type="submit" class="btn">Save Class</button>
                </form>
            </div>
        </div>
        <div class="interactionCard">
            <div class="interactionCardTitle"> Selected Weapon </div>
            <div class="interactionCardContent">
                <form action="/api/changeweapon" method="POST">
                    <input type="hidden" value="<%- User['_id'] %>" name="userid">
                    <select name="weapon" id="weapon_select" class="box">
                        <option value="none" selected disabled hidden><%- User['weapon'] %></option>
                        <% Weapons.forEach(function(data) {%>
                            <option value="<%- data['weaponname'] %>"><%- data['weaponname'] %></option>
                        <%})%>
                    </select>
                    <button type="submit" class="btn">Save Weapon</button>
                </form>
            </div>
        </div>
        <div class="interactionCard">
            <div class="interactionCardTitle"> Join Group </div>
            <div class="interactionCardContent">
                <form action="/api/joingroup" method="POST">
                    <input type="hidden" value="<%- User['_id'] %>" name="userid">
                    <input type="text" placeholder="<%- User['group'] %>" class="box" name="group" autocomplete="off" required>
                    <button type="submit" class="btn">Join Now</button>
                </form>
            </div>
        </div>
        <div class="interactionCard">
            <div class="interactionCardTitle"> Reset All </div>
            <div class="interactionCardContent">
                <form action="/api/resetplayer" method="POST">
                    <input type="hidden" value="<%- User['_id'] %>" name="userid">
                    <input type="text" placeholder="Type: CONFIRM" class="box" name="confirm" autocomplete="off" required>
                    <button type="submit" class="btn">Submit</button>
                </form>
            </div>
        </div>
    </div>
    
</section>