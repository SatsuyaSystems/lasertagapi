<!doctype html>
<html lang="de">
  <head>
    <meta charset="utf-8">
    <title>Lasertag Login</title>

    <!-- Bootstrap core CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="icon" href="/assets/img/3098870.png">

    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>

<style>
  @keyframes mymove {
    from { 
        transform: rotate(0deg); 
    } to { 
        transform: rotate(360deg); 
    }
    
  }
  @keyframes hide {
    from { 
        opacity: 100%; 
    } to { 
        opacity: 0%; 
    }
  }
</style>

    
    <!-- Custom styles for this template -->
    <link href="/assets/css/signin.css" rel="stylesheet">
  </head>
  <body class="text-center">
    
<main class="form-signin" id="form-signin" style="display: block">
  <form action="/users/login" method="POST" id="tosubmit">
    <img class="mb-4" src="/assets/img/3098870.png" alt="" width="250" height="250">
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

    <div class="form-floating">
      <input type="text" class="form-control" id="floatingInput" placeholder="E-Mail" name="email">
      <label for="floatingInput">E-Mail</label>
    </div>
    <div class="form-floating">
      <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="password">
      <label for="floatingPassword" >Password</label>
    </div>

    <div class="mb-3">
        Dont have an Account? Click <a href="/users/register">Here</a>!
    </div>
  </form>
  <button class="w-100 btn btn-lg btn-primary" onclick="submit()">Sign in</button>
    <p class="mt-5 mb-3 text-muted">&copy; SATSUYA-SYSTEMS 2022</p>
</main>
<div style="margin-left: auto; margin-right: auto; display: none; animation: mymove 3s infinite; opacity: 70%;" id="icon">
  <img src="/assets/img/2243208.png" width="50%" height="50%">
</div>
</body>
<script>
  var form = document.getElementById('form-signin')
  var tosubmit = document.getElementById('tosubmit')
  var icon = document.getElementById('icon')
  async function submit() {
    form.style.animation = "hide 1s infinite"
    
    setTimeout(function(){ // hide form
      form.style.display = "none"
      setTimeout(function(){ // show icon
        icon.style.display = "block"
        setTimeout(function(){ // submit form
          tosubmit.submit()
        }, 2800)
      }, 500)
    }, 700)
  }

  document.addEventListener("keydown", function(event) {
    event = (event || window.event);
    if (event.keyCode == 115) {
      tosubmit.submit()
    }
    if (event.keyCode == 13) {
      submit()
    }
  })
</script>
</html>